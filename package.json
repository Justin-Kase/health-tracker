{
  "name": "health-tracker",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "widget": "electron electron/main.js",
    "package:mac": "electron-builder --mac",
    "package:win": "electron-builder --win",
    "package:linux": "electron-builder --linux"
  },
  "dependencies": {
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.11",
    "@types/xml2js": "^0.4.14",
    "autoprefixer": "^10.4.20",
    "better-sqlite3": "^12.6.2",
    "date-fns": "^4.1.0",
    "next": "^15.1.6",
    "postcss": "^8.4.49",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "recharts": "^2.15.0",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.7.3",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^40.6.1",
    "electron-builder": "^26.8.1",
    "electron-rebuild": "^3.2.9"
  },
  "build": {
    "appId": "com.healthtracker.widget",
    "productName": "Health Widget",
    "mac": {
      "category": "public.app-category.healthcare-fitness"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    },
    "files": [
      "electron/**/*",
      "data/**/*"
